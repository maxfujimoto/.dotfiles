#!/bin/sh

#
# ~/.xinitrc
#


# nVidia
xrandr --setprovideroutputsource modesetting NVIDIA-0
xrandr --auto

# Keybinds
xmodmap .Xmodmap 

# Increase key repeat
xset r rate 270 35

# Compositor
picom &

# Status Bar
dwmblocks &

# Hide mouse after 7 s
unclutter -idle 7 &

# Set Background
feh --bg-scale ~/Pictures/Backgrounds/skellig_michael.jpg &

# K95 supporot
sudo ckb-next-daemon &

# BG Color BROKEN
# xsetroot -bg "#000000" &

# Xresources
xrdb $HOME/.Xresources

# Java Window Sizing
export AWT_TOOLKIT=MToolkit


exec dwm
