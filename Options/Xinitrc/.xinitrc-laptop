#!/bin/sh

#
# ~/.xinitrc
#

# Keybinds
xmodmap .Xmodmap 

# Increase key repeat
xset r rate 270 35

# Compositor for alpha 
picom &

# Status Bar
dwmblocks &

# Set backlight to 50%
backlight 50

# Hide mouse after 7 s
unclutter -idle 7 &

# Set Background
feh --bg-scale ~/Pictures/Backgrounds/monks_wide.jpg &

# Xresources
xrdb $HOME/.Xresources

# Java Window Sizing
export AWT_TOOLKIT=MToolkit


exec dwm
