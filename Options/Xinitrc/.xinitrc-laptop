#!/bin/sh

#
# ~/.xinitrc
#


# Detect laptop lid
mondetect

# Keybinds
xmodmap $HOME/.Xmodmap 

# Increase key repeat
xset r rate 270 35

# Status Bar
pidof dwmblocks >/dev/null || dwmblocks &

# Set backlight to 50%
# need if controllable monitor check
# backlight 50

# Compositor
pidof picom >/dev/null || picom &

# Hide mouse after 7 s
unclutter -idle 7 &

# Set Background
feh --bg-fill ~/Pictures/Wallpaper/Ancient/lanisphaeri_coeleste.jpg &&
    mv $HOME/.fehbg $XDG_CONFIG_HOME/fehbg

# Xresources
xrdb $HOME/.Xresources

# Java Window Sizing
export AWT_TOOLKIT=MToolkit

# ---------- ONLY IN .XINITRC START ----------
# ------- DO NOT REMOVE THESE COMMENTS -------

# Emacs Daemon
pidof emacs >/dev/null || emacs --fg-daemon &

while true; do
    dbus-launch --exit-with-session dwm 2> ~/Documents/Logs/dwm.log
done

# ------- DO NOT REMOVE THESE COMMENTS -------
# ----------- ONLY IN .XINITRC END -----------
